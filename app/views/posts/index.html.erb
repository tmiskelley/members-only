<h1>Member Posts</h1>

<% @posts.each do |post| %>
  <div style="padding-left: 1rem; border: solid black 1px;">
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <%= link_to "View post", post_path(post) %>
    <br><br>
  </div>
  <br>
<% end %>

<%= link_to "Create new post", new_post_path %>
<p>Return to <%= link_to "home", root_path %></p>
